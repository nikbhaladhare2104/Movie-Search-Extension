{
  "manifest_version": 3,
  "name": "Movie Search Extension",
  "version": "1.0",
  "description": "Enhances Google search experience for movie queries.",
  "permissions": ["tabs", "storage", "https://www.google.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
